{
  "compilerOptions": {
    "target": "es2015",
    "downlevelIteration": true,
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts",  "./source/**/*.tsx", "./source/**/*.ts", "**/*.ts", "**/*.tsx", "./*. ", "**/*.svg",],
  "exclude": [
    "node_modules",
    "content/code-blocks/**/*",
  ]
}
